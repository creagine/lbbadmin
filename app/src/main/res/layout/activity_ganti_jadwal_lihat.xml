                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewStatusLihat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="status" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/buttonUpdateJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cappsadmin"
            android:text="Update jadwal"
            android:textColor="@color/cardaccent" />

        <Button
            android:id="@+id/buttonTolakJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Tolak pergantian jadwal"
            android:textColor="@color/colorAccent" />

    </LinearLayout>



</ScrollView>